
<h1> Your Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Length</th>
      <th>Subjectstring</th>
      <th>Level</th>
      <th>Image url</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.length %></td>
        <td><%= course.subjectstring %></td>
      
        <td><%= Level.find(course.level).name %></td>
        <td><%= course.image_url %></td>
        <td><%= course.university.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container">
  <div class="row">
      <% @courses.each do |course| %>
				  <div class="col s4">
					<div class="card">
						<div class="card-image">
							<img src="http://lorempixel.com/640/480/abstract/10">
							<span class="card-title"> <%= course.title %> </span>
						</div>
						<div class="card-content">
							<p><%= course.description %></p>
						</div>
						<div class="card-action">
							
              <div class="row">
                   <%= link_to 'Show', course %>
                   <%= link_to 'Edit', edit_course_path(course) %>
                   <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
             
						</div>
					</div>
				</div>
				<% end %>
  </div>
</div>
<br>

<%= link_to 'New Course', new_course_path %>
