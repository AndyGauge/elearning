<h1> Your Courses</h1>

<table>
  <thead>
    <tr>
      <th> Course title </th>
      <th> User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_enrollements.each do |enroll| %>
      <tr>
        <td><%= enroll.course.title %></td>
        <td><%= enroll.user.name %></td>
        <td><%= link_to 'Show', enroll.course %></td>
        <td><%= link_to 'Edit', edit_course_path(enroll.course) %></td>
        <td><%= link_to 'Unsubscribe', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>